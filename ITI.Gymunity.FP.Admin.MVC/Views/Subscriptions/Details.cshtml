@using ITI.Gymunity.FP.Domain.Models.Enums
@using ITI.Gymunity.FP.Application.DTOs.User.Subscribe
@model SubscriptionResponse

@{
    ViewData["Title"] = "Subscription Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Calculate days remaining and status colors
    var daysRemaining = Model.DaysRemaining;
    var statusColor = Model.Status switch
    {
        SubscriptionStatus.Active => "bg-green-50 text-green-700 border-green-200",
        SubscriptionStatus.Canceled => "bg-red-50 text-red-700 border-red-200",
        SubscriptionStatus.Unpaid => "bg-yellow-50 text-yellow-700 border-yellow-200",
        _ => "bg-gray-50 text-gray-700 border-gray-200"
    };

    var statusIcon = Model.Status switch
    {
        SubscriptionStatus.Active => "fas fa-check-circle",
        SubscriptionStatus.Canceled => "fas fa-times-circle",
        SubscriptionStatus.Unpaid => "fas fa-exclamation-circle",
        _ => "fas fa-question-circle"
    };

    var statusBadgeColor = Model.Status switch
    {
        SubscriptionStatus.Active => "bg-green-100 text-green-700",
        SubscriptionStatus.Canceled => "bg-red-100 text-red-700",
        SubscriptionStatus.Unpaid => "bg-yellow-100 text-yellow-700",
        _ => "bg-gray-100 text-gray-700"
    };

    var progressColor = Model.Status == SubscriptionStatus.Active && Model.IsExpiringSoon ? "bg-yellow-500" : 
                        Model.Status == SubscriptionStatus.Active ? "bg-green-500" : "bg-gray-400";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Subscription #@Model.Id</h1>
            <p class="text-gray-500 mt-2">View and manage subscription details</p>
        </div>
        <a href="@Url.Action("Index")" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg transition font-medium inline-flex items-center gap-2 w-fit">
            <i class="fas fa-arrow-left"></i>
            <span>Back to Subscriptions</span>
        </a>
    </div>

    <!-- Status Alert Banner -->
    @if (Model.Status == SubscriptionStatus.Unpaid)
    {
        <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg flex items-start gap-3">
            <i class="fas fa-exclamation-triangle text-yellow-600 flex-shrink-0 mt-0.5"></i>
            <div class="flex-grow">
                <h3 class="font-semibold text-yellow-900">Payment Pending</h3>
                <p class="text-sm text-yellow-700 mt-1">This subscription is awaiting payment. Please process payment to activate the subscription.</p>
            </div>
        </div>
    }

    @if (Model.Status == SubscriptionStatus.Canceled)
    {
        <div class="p-4 bg-red-50 border border-red-200 rounded-lg flex items-start gap-3">
            <i class="fas fa-info-circle text-red-600 flex-shrink-0 mt-0.5"></i>
            <div class="flex-grow">
                <h3 class="font-semibold text-red-900">Subscription Canceled</h3>
                <p class="text-sm text-red-700 mt-1">This subscription was canceled on @Model.CanceledAt?.ToString("MMM dd, yyyy") at @Model.CanceledAt?.ToString("hh:mm tt")</p>
            </div>
        </div>
    }

    @if (Model.Status == SubscriptionStatus.Active && Model.IsExpiringSoon)
    {
        <div class="p-4 bg-orange-50 border border-orange-200 rounded-lg flex items-start gap-3">
            <i class="fas fa-clock text-orange-600 flex-shrink-0 mt-0.5"></i>
            <div class="flex-grow">
                <h3 class="font-semibold text-orange-900">Expiring Soon</h3>
                <p class="text-sm text-orange-700 mt-1">This subscription will expire in @Model.DaysRemaining days. Consider renewing to maintain service continuity.</p>
            </div>
        </div>
    }

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column: Subscription Details -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Subscription Status Card -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <div class="flex items-start justify-between gap-4 mb-6">
                    <div>
                        <h2 class="text-lg font-semibold text-gray-900 mb-2">Subscription Status</h2>
                        <p class="text-sm text-gray-600">Current status and timeline information</p>
                    </div>
                    <span class="inline-flex items-center gap-2 px-4 py-2 @statusBadgeColor rounded-full text-sm font-semibold">
                        <i class="@statusIcon"></i>
                        @Model.Status.ToString()
                    </span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Status Timeline -->
                    <div>
                        <div class="space-y-4">
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Start Date</label>
                                <p class="text-lg font-semibold text-gray-900 mt-1">@Model.StartDate.ToString("MMM dd, yyyy")</p>
                                <p class="text-sm text-gray-600">@Model.StartDate.ToString("dddd")</p>
                            </div>
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Expiration Date</label>
                                <p class="text-lg font-semibold text-gray-900 mt-1">@Model.CurrentPeriodEnd.ToString("MMM dd, yyyy")</p>
                                <p class="text-sm text-gray-600">@Model.CurrentPeriodEnd.ToString("dddd")</p>
                            </div>
                        </div>
                    </div>

                    <!-- Duration Info -->
                    <div>
                        <div class="space-y-4">
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Duration</label>
                                <p class="text-lg font-semibold text-gray-900 mt-1">@(Model.IsAnnual ? "Annual" : "Monthly")</p>
                                <p class="text-sm text-gray-600">@(Model.IsAnnual ? "12 months" : "1 month")</p>
                            </div>
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Days Remaining</label>
                                <p class="text-lg font-semibold @(Model.Status == SubscriptionStatus.Active && Model.IsExpiringSoon ? "text-yellow-600" : "text-gray-900") mt-1">
                                    @(Model.Status == SubscriptionStatus.Active ? $"{Model.DaysRemaining} days" : "-")
                                </p>
                                <p class="text-sm text-gray-600">
                                    @if (Model.Status == SubscriptionStatus.Active)
                                    {
                                        @if (Model.IsExpiringSoon)
                                        {
                                            <span>Expiring soon</span>
                                        }
                                        else if (Model.HasExpired)
                                        {
                                            <span>Subscription expired</span>
                                        }
                                        else
                                        {
                                            <span>Active</span>
                                        }
                                    }
                                    else
                                    {
                                        <span>@Model.Status.ToString()</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Progress Bar -->
                @if (Model.Status == SubscriptionStatus.Active)
                {
                    <div class="mt-6 pt-6 border-t border-gray-200">
                        <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Subscription Progress</label>
                        <div class="mt-3 h-2 bg-gray-200 rounded-full overflow-hidden">
                            @{
                                var totalDays = (Model.CurrentPeriodEnd - Model.StartDate).TotalDays;
                                var elapsedDays = (DateTime.UtcNow - Model.StartDate).TotalDays;
                                var progress = totalDays > 0 ? (elapsedDays / totalDays) * 100 : 0;
                                progress = Math.Max(0, Math.Min(100, progress));
                            }
                            <div class="h-full @progressColor transition-all" style="width: @progress.ToString("F2")%"></div>
                        </div>
                        <p class="text-xs text-gray-600 mt-2">@progress.ToString("F0")% complete</p>
                    </div>
                }
            </div>

            <!-- Package Information Card -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Package Information</h2>
                
                <div class="space-y-4">
                    <div>
                        <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Package Name</label>
                        <p class="text-lg font-semibold text-gray-900 mt-1">@Model.PackageName</p>
                    </div>

                    <div>
                        <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Description</label>
                        <p class="text-gray-700 mt-1">@Model.PackageDescription</p>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Price</label>
                            <p class="text-2xl font-bold text-blue-600 mt-1">
                                @Model.AmountPaid.ToString("C")
                                <span class="text-sm text-gray-600 font-normal">@Model.Currency</span>
                            </p>
                        </div>
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Package ID</label>
                            <p class="text-lg font-semibold text-gray-900 mt-1">@Model.PackageId</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Features Card -->
            @if (Model.FeaturesIncluded != null && Model.FeaturesIncluded.Any())
            {
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Included Features</h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                        @foreach (var feature in Model.FeaturesIncluded)
                        {
                            <div class="flex items-center gap-3 p-3 bg-blue-50 rounded-lg border border-blue-100">
                                <i class="fas fa-check-circle text-blue-600 flex-shrink-0"></i>
                                <span class="text-gray-700 text-sm">@feature</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Right Column: Trainer & Actions -->
        <div class="space-y-6">
            <!-- Trainer Card -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Trainer Information</h2>

                <div class="text-center">
                    <!-- Trainer Avatar -->
                    <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white text-2xl shadow-md">
                        @if (!string.IsNullOrEmpty(Model.TrainerPhotoUrl))
                        {
                            <img src="@Model.TrainerPhotoUrl" alt="@Model.TrainerName" class="w-full h-full rounded-full object-cover">
                        }
                        else
                        {
                            <i class="fas fa-dumbbell"></i>
                        }
                    </div>

                    <!-- Trainer Details -->
                    <h3 class="text-lg font-semibold text-gray-900">@Model.TrainerName</h3>
                    <p class="text-sm text-blue-600 font-medium mt-1">@Model.TrainerHandle</p>
                    <p class="text-sm text-gray-600 mt-4">Trainer ID: @Model.TrainerId</p>

                    <!-- View Trainer Button -->
                    <a href="@Url.Action("Details", "Trainers", new { id = Model.TrainerProfileId })" 
                       class="mt-4 w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition font-medium text-sm">
                        View Trainer Profile
                    </a>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Actions</h2>

                <div class="space-y-2">
                    @if (Model.Status == SubscriptionStatus.Active)
                    {
                        <button type="button" 
                                class="w-full px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition font-medium text-sm flex items-center justify-center gap-2"
                                onclick="confirmCancel(@Model.Id)">
                            <i class="fas fa-ban"></i>
                            <span>Cancel Subscription</span>
                        </button>
                    }
                    
                    <button type="button" 
                            class="w-full px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg transition font-medium text-sm flex items-center justify-center gap-2"
                            onclick="downloadDetails()">
                        <i class="fas fa-download"></i>
                        <span>Download Details</span>
                    </button>

                    <button type="button" 
                            class="w-full px-4 py-2 bg-blue-100 hover:bg-blue-200 text-blue-700 rounded-lg transition font-medium text-sm flex items-center justify-center gap-2"
                            onclick="printDetails()">
                        <i class="fas fa-print"></i>
                        <span>Print</span>
                    </button>
                </div>
            </div>

            <!-- Summary Card -->
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg shadow-sm border border-blue-200 p-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Summary</h2>

                <div class="space-y-3">
                    <div class="flex justify-between items-center py-2 border-b border-blue-200">
                        <span class="text-gray-600">Subscription ID:</span>
                        <span class="font-semibold text-gray-900">#@Model.Id</span>
                    </div>
                    <div class="flex justify-between items-center py-2 border-b border-blue-200">
                        <span class="text-gray-600">Amount Paid:</span>
                        <span class="font-semibold text-blue-600">@Model.AmountPaid.ToString("C")</span>
                    </div>
                    <div class="flex justify-between items-center py-2 border-b border-blue-200">
                        <span class="text-gray-600">Status:</span>
                        <span class="inline-flex items-center gap-1 px-2 py-1 @statusBadgeColor rounded-full text-xs font-semibold">
                            <i class="@statusIcon text-xs"></i>
                            @Model.Status.ToString()
                        </span>
                    </div>
                    <div class="flex justify-between items-center py-2">
                        <span class="text-gray-600">Active:</span>
                        <span class="font-semibold @(Model.Status == SubscriptionStatus.Active ? "text-green-600" : "text-red-600")">
                            @(Model.Status == SubscriptionStatus.Active ? "Yes" : "No")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Timeline/History Section (Optional - for future enhancement) -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Timeline</h2>
        
        <div class="space-y-4">
            <!-- Created Event -->
            <div class="flex gap-4">
                <div class="flex flex-col items-center">
                    <div class="w-4 h-4 rounded-full bg-blue-600 border-4 border-white shadow-md"></div>
                    <div class="w-1 h-12 bg-gray-200 mt-2"></div>
                </div>
                <div class="pt-1">
                    <p class="font-semibold text-gray-900">Subscription Created</p>
                    <p class="text-sm text-gray-600">@Model.StartDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</p>
                </div>
            </div>

            <!-- Expiration Event -->
            <div class="flex gap-4">
                <div class="flex flex-col items-center">
                    <div class="w-4 h-4 rounded-full @(Model.Status == SubscriptionStatus.Active && !Model.HasExpired ? "bg-yellow-600" : "bg-gray-400") border-4 border-white shadow-md"></div>
                    @if (Model.Status != SubscriptionStatus.Canceled && !Model.HasExpired)
                    {
                        <div class="w-1 h-12 bg-gray-200 mt-2"></div>
                    }
                </div>
                <div class="pt-1">
                    <p class="font-semibold text-gray-900">@(Model.HasExpired ? "Subscription Expired" : "Scheduled Expiration")</p>
                    <p class="text-sm text-gray-600">@Model.CurrentPeriodEnd.ToString("MMM dd, yyyy 'at' hh:mm tt")</p>
                </div>
            </div>

            <!-- Cancellation Event (if canceled) -->
            @if (Model.Status == SubscriptionStatus.Canceled && Model.CanceledAt.HasValue)
            {
                <div class="flex gap-4">
                    <div class="flex flex-col items-center">
                        <div class="w-4 h-4 rounded-full bg-red-600 border-4 border-white shadow-md"></div>
                    </div>
                    <div class="pt-1">
                        <p class="font-semibold text-gray-900">Subscription Canceled</p>
                        <p class="text-sm text-gray-600">@Model.CanceledAt?.ToString("MMM dd, yyyy 'at' hh:mm tt")</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Cancel Confirmation Modal -->
<div id="cancelModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 space-y-4">
        <div class="text-center">
            <i class="fas fa-exclamation-circle text-red-600 text-4xl mb-4"></i>
            <h2 class="text-xl font-semibold text-gray-900 mb-2">Cancel Subscription?</h2>
            <p class="text-gray-600 text-sm">This action cannot be undone. The subscription will be immediately canceled.</p>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Reason for Cancellation (Optional)</label>
            <textarea id="cancelReason" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent transition resize-none" 
                      placeholder="Enter cancellation reason..." rows="3"></textarea>
        </div>

        <div class="flex gap-3">
            <button type="button" class="flex-1 px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg transition font-medium" 
                    onclick="closeModal('cancelModal')">
                Cancel
            </button>
            <button type="button" id="confirmCancelBtn" class="flex-1 px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition font-medium"
                    onclick="submitCancel()">
                Confirm Cancel
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let subscriptionIdToCancel = null;

        function confirmCancel(subscriptionId) {
            subscriptionIdToCancel = subscriptionId;
            document.getElementById('cancelModal').classList.remove('hidden');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.add('hidden');
        }

        function submitCancel() {
            const reason = document.getElementById('cancelReason').value;
            const confirmBtn = document.getElementById('confirmCancelBtn');
            
            confirmBtn.disabled = true;
            confirmBtn.innerHTML = '<i class="fas fa-spinner animate-spin mr-2"></i>Processing...';

            fetch(`/admin/subscriptions/${subscriptionIdToCancel}/cancel`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify({ reason: reason })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Show success message and reload
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                    confirmBtn.disabled = false;
                    confirmBtn.innerHTML = 'Confirm Cancel';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while canceling the subscription');
                confirmBtn.disabled = false;
                confirmBtn.innerHTML = 'Confirm Cancel';
            });
        }

        function downloadDetails() {
            const html = '<html><head><title>Subscription Details</title><style>body { font-family: Arial, sans-serif; padding: 20px; } .header { color: #1e40af; margin-bottom: 20px; } .section { margin-bottom: 20px; } .label { font-weight: bold; color: #374151; } table { width: 100%; border-collapse: collapse; margin-top: 10px; } td { padding: 8px; border: 1px solid #e5e7eb; }</style></head><body><h1 class="header">Subscription Details</h1><div class="section"><h2>Subscription Information</h2><table><tr><td class="label">ID:</td><td>@Model.Id</td></tr><tr><td class="label">Status:</td><td>@Model.Status.ToString()</td></tr><tr><td class="label">Start Date:</td><td>@Model.StartDate.ToString("MMM dd, yyyy")</td></tr><tr><td class="label">End Date:</td><td>@Model.CurrentPeriodEnd.ToString("MMM dd, yyyy")</td></tr><tr><td class="label">Amount:</td><td>@Model.AmountPaid.ToString("C")</td></tr></table></div><div class="section"><h2>Package Information</h2><table><tr><td class="label">Package:</td><td>@Model.PackageName</td></tr><tr><td class="label">Trainer:</td><td>@Model.TrainerName</td></tr><tr><td class="label">Duration:</td><td>@(Model.IsAnnual ? "Annual" : "Monthly")</td></tr></table></div><p style="margin-top: 40px; color: #6b7280; font-size: 12px;">Generated on @DateTime.Now.ToString("MMM dd, yyyy HH:mm:ss")</p></body></html>';
            
            const blob = new Blob([html], { type: 'text/html' });
            const url = window.URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'subscription-@Model.Id-details.html';
            link.click();
            window.URL.revokeObjectURL(url);
        }

        function printDetails() {
            window.print();
        }

        // Close modal on background click
        document.getElementById('cancelModal').addEventListener('click', function(event) {
            if (event.target === this) {
                this.classList.add('hidden');
            }
        });
    </script>
}
