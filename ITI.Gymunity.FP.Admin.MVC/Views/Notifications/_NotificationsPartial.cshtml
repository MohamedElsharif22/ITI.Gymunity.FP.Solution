@using ITI.Gymunity.FP.Admin.MVC.ViewModels.Notifications
@model IEnumerable<NotificationViewModel>

@foreach (var notification in Model)
{
    <div class="card mb-3 notification-item @(notification.IsRead ? "read" : "unread")" data-notification-id="@notification.Id">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
                <div class="flex-grow-1">
                    <h5 class="card-title fw-bold">@notification.Title</h5>
                    <p class="card-text text-muted">@notification.Message</p>
                    <small class="text-secondary">
                        <i class="fas fa-clock"></i> @notification.CreatedAt.ToString("g")
                    </small>
                </div>
                <div class="d-flex gap-2">
                    @if (!notification.IsRead)
                    {
                        <button class="btn btn-sm btn-outline-primary" 
                                onclick="markAsRead(@notification.Id)" 
                                title="Mark as read">
                            <i class="fas fa-check"></i>
                        </button>
                    }
                    else
                    {
                        <span class="badge bg-success">Read</span>
                    }
                </div>
            </div>
        </div>
    </div>
}
