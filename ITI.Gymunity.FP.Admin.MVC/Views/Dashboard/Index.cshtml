@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Global chart instances
        let revenueChart = null;
        let subscriptionStatusChart = null;
        let paymentStatusChart = null;
        let userDistributionChart = null;

        // Initialize Revenue Chart
        async function initRevenueChart(days = 30) {
            try {
                const response = await fetch(`/admin/dashboard/chart-data/revenue?days=${days}`);
                const data = await response.json();

                const ctx = document.getElementById('revenueChart');
                if (!ctx) return;

                if (revenueChart) {
                    revenueChart.destroy();
                }

                const gradient = ctx.getContext('2d').createLinearGradient(0, 0, 0, 400);
                gradient.addColorStop(0, 'rgba(37, 99, 235, 0.3)');
                gradient.addColorStop(1, 'rgba(37, 99, 235, 0.01)');

                revenueChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: data.labels,
                        datasets: [{
                            label: 'Revenue (EGP)',
                            data: data.data,
                            borderColor: '#2563EB',
                            backgroundColor: gradient,
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4,
                            pointBackgroundColor: '#2563EB',
                            pointBorderColor: '#fff',
                            pointBorderWidth: 2,
                            pointRadius: 5,
                            pointHoverRadius: 7,
                            pointShadowBlur: 10,
                            pointShadowOffsetX: 0,
                            pointShadowOffsetY: 4,
                            pointShadowColor: 'rgba(37, 99, 235, 0.3)'
                        }]
                    },
                    options: {
                        responsive: true,
