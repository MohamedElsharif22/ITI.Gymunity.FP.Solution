@using ITI.Gymunity.FP.Admin.MVC.ViewModels.Clients
@model ClientsListViewModel

@{
    ViewData["Title"] = "Manage Clients";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Clients Management</h1>
            <p class="text-gray-600 mt-1">View and manage client accounts</p>
        </div>
        
        <div class="flex items-center gap-2 text-sm text-gray-500">
            <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-full font-medium">
                <span id="totalClientsCount">@Model.TotalCount</span> Total Clients
            </span>
        </div>
    </div>

    <!-- Filters & Search -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                <!-- Search Input -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
                    <input type="text" id="searchInput" value="@Model.SearchTerm" 
                           placeholder="Name, email, or username..."
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition">
                </div>

                <!-- Page Size -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Per Page</label>
                    <select id="pageSizeSelect" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition">
                        <option value="10" selected="@(Model.PageSize == 10 ? "selected" : "")">10</option>
                        <option value="25" selected="@(Model.PageSize == 25 ? "selected" : "")">25</option>
                        <option value="50" selected="@(Model.PageSize == 50 ? "selected" : "")">50</option>
                    </select>
                </div>

                <!-- Reset Button -->
                <div class="flex gap-2">
                    <button type="button" id="resetBtn" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium flex items-center justify-center gap-2">
                        <i class="fas fa-redo"></i>
                        <span>Reset</span>
                    </button>
                </div>

                <!-- Search Button -->
                <div>
                    <button type="button" id="searchBtn" class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition font-medium flex items-center justify-center gap-2">
                        <i class="fas fa-search"></i>
                        <span>Search</span>
                    </button>
                </div>
            </div>

            <!-- Loading Indicator -->
            <div id="loadingIndicator" class="hidden flex items-center justify-center gap-2 text-blue-600">
                <div class="animate-spin">
                    <i class="fas fa-spinner"></i>
                </div>
                <span>Loading clients...</span>
            </div>
        </div>
    </div>

    <!-- Clients Table Container -->
    <div id="tableContainer">
        @await Html.PartialAsync("_ClientsTablePartial", Model)
    </div>
</div>

@section Scripts {
    <script>
        const BASE_URL = '@Url.Action("Index", "Clients")';
        const SEARCH_URL = '@Url.Action("Index", "Clients")';

        // Get form elements
        const searchInput = document.getElementById('searchInput');
        const pageSizeSelect = document.getElementById('pageSizeSelect');
        const searchBtn = document.getElementById('searchBtn');
        const resetBtn = document.getElementById('resetBtn');
        const loadingIndicator = document.getElementById('loadingIndicator');
        const tableContainer = document.getElementById('tableContainer');

        // Search and filter event listeners
        searchBtn.addEventListener('click', () => loadClients(1));
        resetBtn.addEventListener('click', resetFilters);
        pageSizeSelect.addEventListener('change', () => loadClients(1));

        // Enter key on search input
        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                loadClients(1);
            }
        });

        // Load clients with current filters
        async function loadClients(pageNumber = 1) {
            try {
                showLoading(true);

                const searchTerm = searchInput.value.trim();
                const pageSize = pageSizeSelect.value;

                // Build query string
                const params = new URLSearchParams({
                    pageNumber: pageNumber,
                    pageSize: pageSize,
                    ...(searchTerm && { searchTerm: searchTerm })
                });

                const response = await fetch(`${BASE_URL}?${params}`, {
                    method: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const html = await response.text();
                tableContainer.innerHTML = html;

                // Attach pagination event listeners
                attachPaginationListeners();
                scrollToTable();
            } catch (error) {
                console.error('Error loading clients:', error);
                showErrorMessage('Failed to load clients. Please try again.');
            } finally {
                showLoading(false);
            }
        }

        // Attach event listeners to pagination links
        function attachPaginationListeners() {
            const paginationLinks = document.querySelectorAll('[data-page-number]');
            paginationLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const pageNumber = link.getAttribute('data-page-number');
                    loadClients(pageNumber);
                });
            });
        }

        // Reset filters
        function resetFilters() {
            searchInput.value = '';
            pageSizeSelect.value = '10';
            loadClients(1);
        }

        // Show/hide loading indicator
        function showLoading(show) {
            loadingIndicator.classList.toggle('hidden', !show);
        }

        // Show error message
        function showErrorMessage(message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 flex items-center gap-2';
            alertDiv.innerHTML = `
                <i class="fas fa-exclamation-circle"></i>
                <span>${message}</span>
            `;
            tableContainer.insertBefore(alertDiv, tableContainer.firstChild);

            // Auto-remove after 5 seconds
            setTimeout(() => alertDiv.remove(), 5000);
        }

        // Scroll to table container
        function scrollToTable() {
            tableContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        // Initial pagination setup
        document.addEventListener('DOMContentLoaded', () => {
            attachPaginationListeners();
        });
    </script>
}
