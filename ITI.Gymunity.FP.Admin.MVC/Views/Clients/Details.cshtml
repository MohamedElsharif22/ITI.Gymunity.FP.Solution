// Process Refund
document.getElementById('refundForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const data = {
        clientId: formData.get('clientId') || '',
        paymentId: formData.get('paymentId') || '',
        reason: formData.get('reason') || '',
        notes: formData.get('notes') || ''
    };
    
    document.getElementById('confirmationMessage').textContent = `Are you sure you want to refund this payment? This action cannot be undone.`;
    document.getElementById('confirmationBtn').onclick = async () => {
        try {
            const response = await fetch('@Url.Action("ProcessRefund", "Clients")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify(data)
            });
            
            const result = await response.json();
            
            if (result.success) {
                showAlert('Refund processed successfully', 'success');
                closeModal('confirmationModal');
                closeModal('refundModal');
                setTimeout(() => window.location.reload(), 1500);
            } else {
                showAlert(result.message || 'Failed to process refund', 'danger');
            }
        } catch (error) {
            showAlert('An error occurred: ' + error.message, 'danger');
        }
    };
    
    openModal('confirmationModal');
});

// Show Alert Helper
function showAlert(message, type = 'info') {
    const typeClasses = {
        success: 'bg-green-50 border-green-200 text-green-800',
        danger: 'bg-red-50 border-red-200 text-red-800',
        warning: 'bg-yellow-50 border-yellow-200 text-yellow-800',
        info: 'bg-blue-50 border-blue-200 text-blue-800'
    };
    
    const alertDiv = document.createElement('div');
    alertDiv.className = `fixed top-4 right-4 max-w-md p-4 border rounded-lg ${typeClasses[type] || typeClasses.info} shadow-lg z-40 animate-slideIn`;
    alertDiv.innerHTML = `
        <div class="flex items-start gap-3">
            <div class="flex-grow">${message}</div>
            <button type="button" class="text-gray-400 hover:text-gray-600" onclick="this.parentElement.parentElement.remove()">
                <i class="fas fa-times"></i>
            </button>
        </div>
    `;
    document.body.appendChild(alertDiv);
    
    setTimeout(() => alertDiv.remove(), 5000);
}
</script>

