<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gymunity Admin</title>

    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6.4 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Admin Custom CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar Navigation -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo-section">
                    <h5 class="logo-text">
                        <i class="fas fa-dumbbell"></i> Gymunity
                    </h5>
                    <small class="text-muted">Admin Panel</small>
                </div>
                <button class="btn btn-link sidebar-toggle d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <ul class="nav flex-column sidebar-nav" id="navbarNav">
                <li class="nav-item sidebar-item">
                    <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                        <i class="nav-icon fas fa-chart-line"></i>
                        <span class="nav-text">Dashboard</span>
                    </a>
                </li>

                <li class="nav-item sidebar-item">
                    <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">
                        <i class="nav-icon fas fa-users"></i>
                        <span class="nav-text">Users</span>
                    </a>
                </li>

                <li class="nav-item sidebar-item">
                    <a class="nav-link" asp-area="" asp-controller="Trainers" asp-action="Index">
                        <i class="nav-icon fas fa-dumbbell"></i>
                        <span class="nav-text">Trainers</span>
                    </a>
                </li>

                <li class="nav-item sidebar-item">
                    <a class="nav-link" asp-area="" asp-controller="Reviews" asp-action="Index">
                        <i class="nav-icon fas fa-star"></i>
                        <span class="nav-text">Reviews</span>
                        <span class="badge bg-danger rounded-pill ms-auto d-none" id="reviewBadge">0</span>
                    </a>
                </li>

                <li class="nav-item sidebar-item">
                    <a class="nav-link" asp-area="" asp-controller="Subscriptions" asp-action="Index">
                        <i class="nav-icon fas fa-credit-card"></i>
                        <span class="nav-text">Subscriptions</span>
                    </a>
                </li>

                <li class="nav-item sidebar-item">
                    <a class="nav-link" asp-area="" asp-controller="Payments" asp-action="Index">
                        <i class="nav-icon fas fa-money-bill-wave"></i>
                        <span class="nav-text">Payments</span>
                    </a>
                </li>

                <li class="nav-item sidebar-item">
                    <a class="nav-link" asp-area="" asp-controller="Programs" asp-action="Index">
                        <i class="nav-icon fas fa-list-check"></i>
                        <span class="nav-text">Programs</span>
                    </a>
                </li>

                <li class="nav-item sidebar-item">
                    <a class="nav-link" asp-area="" asp-controller="Analytics" asp-action="Index">
                        <i class="nav-icon fas fa-chart-bar"></i>
                        <span class="nav-text">Analytics</span>
                    </a>
                </li>

                <hr class="my-3 sidebar-divider">

                <li class="nav-item sidebar-item">
                    <a class="nav-link" asp-area="" asp-controller="Settings" asp-action="Index">
                        <i class="nav-icon fas fa-cog"></i>
                        <span class="nav-text">Settings</span>
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <a class="nav-link text-danger" asp-area="" asp-controller="Auth" asp-action="Logout">
                    <i class="nav-icon fas fa-sign-out-alt"></i>
                    <span class="nav-text">Logout</span>
                </a>
            </div>
        </nav>

        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Top Navigation Bar -->
            <nav class="topbar navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <!-- Left Side: Menu Toggle & Breadcrumb -->
                    <div class="navbar-left">
                        <button class="btn btn-link sidebar-toggle-btn" id="sidebarToggle" type="button">
                            <i class="fas fa-bars fs-5"></i>
                        </button>

                        <nav aria-label="breadcrumb" class="d-none d-md-block ms-3">
                            <ol class="breadcrumb mb-0 small">
                                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                                @if (ViewBag.BreadcrumbItems != null)
                                {
                                    @foreach (var item in ViewBag.BreadcrumbItems)
                                    {
                                        <li class="breadcrumb-item active">@item</li>
                                    }
                                }
                            </ol>
                        </nav>
                    </div>

                    <!-- Right Side: User Menu & Utilities -->
                    <div class="navbar-right ms-auto">
                        <div class="d-flex align-items-center gap-3">
                            <!-- Notifications -->
                            <div class="dropdown">
                                <button class="btn btn-link position-relative" type="button" data-bs-toggle="dropdown" title="Notifications">
                                    <i class="fas fa-bell fs-5"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge badge-notification bg-danger rounded-pill d-none" id="notificationBadge">0</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
                                    <li class="dropdown-header">
                                        Notifications
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item small text-muted text-center py-3" href="#">No new notifications</a></li>
                                </ul>
                            </div>

                            <!-- User Menu -->
                            <div class="dropdown">
                                <button class="btn btn-link dropdown-toggle d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown">
                                    <div class="user-avatar">
                                        <i class="fas fa-user-circle fs-4"></i>
                                    </div>
                                    <span class="d-none d-sm-inline small fw-500">@User.Identity?.Name</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-header">
                                        @User.Identity?.Name
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/admin/settings">
                                        <i class="fas fa-cog me-2"></i> Settings
                                    </a></li>
                                    <li><a class="dropdown-item" href="/admin/profile">
                                        <i class="fas fa-user me-2"></i> Profile
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                                    </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="page-container">
                <!-- Alert Messages -->
                @if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
                {
                    <div class="container-fluid px-4 pt-4">
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
                {
                    <div class="container-fluid px-4 pt-4">
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(TempData["WarningMessage"]?.ToString()))
                {
                    <div class="container-fluid px-4 pt-4">
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["WarningMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    </div>
                }

                <!-- Main Page Content -->
                <main class="page-content">
                    @RenderBody()
                </main>
            </div>

            <!-- Footer -->
            <footer class="admin-footer">
                <div class="container-fluid px-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-0 small text-muted">
                            &copy; 2024 Gymunity. All rights reserved.
                        </p>
                        <div class="small text-muted">
                            <span id="currentTime"></span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Bootstrap 5.3 Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Admin Custom JS -->
    <script src="~/js/admin.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
