@using ITI.Gymunity.FP.Admin.MVC.ViewModels.Trainers
@model TrainersListViewModel

<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Trainer Info</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Username</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Status</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Clients</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Rating</th>
                    <th class="px-6 py-4 text-right text-sm font-semibold text-gray-900">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @if (Model.Trainers.Any())
                {
                    @foreach (var trainer in Model.Trainers)
                    {
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white font-bold text-sm flex-shrink-0">
                                        @trainer.Handle[0]
                                    </div>
                                    <div>
                                        <p class="font-medium text-gray-900">@trainer.Handle</p>
                                        <p class="text-sm text-gray-500">@@@trainer.UserName</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                @trainer.UserName
                            </td>
                            <td class="px-6 py-4">
                                @if (trainer.IsSuspended)
                                {
                                    <span class="inline-flex items-center gap-2 px-3 py-1 bg-red-50 text-red-700 rounded-full text-sm font-medium">
                                        <i class="fas fa-ban"></i>
                                        Suspended
                                    </span>
                                }
                                else if (trainer.IsVerified)
                                {
                                    <span class="inline-flex items-center gap-2 px-3 py-1 bg-green-50 text-green-700 rounded-full text-sm font-medium">
                                        <i class="fas fa-check-circle"></i>
                                        Verified
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center gap-2 px-3 py-1 bg-yellow-50 text-yellow-700 rounded-full text-sm font-medium">
                                        <i class="fas fa-clock"></i>
                                        Pending
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 text-sm font-medium text-gray-900">@trainer.TotalClients</td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-1">
                                    <i class="fas fa-star text-yellow-400"></i>
                                    <span class="text-sm font-medium text-gray-900">@trainer.RatingAverage.ToString("F1")</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center justify-end gap-2">
                                    <a href="@Url.Action("Details", new { id = trainer.Id })" 
                                       class="px-3 py-2 text-sm font-medium text-blue-600 hover:bg-blue-50 rounded-lg transition"
                                       title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    
                                    @if (trainer.IsSuspended)
                                    {
                                        <!-- Suspended Trainer - Only reactivate option -->
                                        <button type="button" class="px-3 py-2 text-sm font-medium text-blue-600 hover:bg-blue-50 rounded-lg transition reactivate-btn"
                                                data-trainer-id="@trainer.Id" 
                                                data-trainer-name="@trainer.Handle"
                                                title="Reactivate Trainer">
                                            <i class="fas fa-redo-alt"></i>
                                        </button>
                                    }
                                    else if (!trainer.IsVerified)
                                    {
                                        <!-- Unverified Trainer - Verify or Reject options -->
                                        <button type="button" class="px-3 py-2 text-sm font-medium text-green-600 hover:bg-green-50 rounded-lg transition verify-btn"
                                                data-trainer-id="@trainer.Id" 
                                                data-trainer-name="@trainer.Handle"
                                                title="Verify Trainer">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        
                                        <button type="button" class="px-3 py-2 text-sm font-medium text-red-600 hover:bg-red-50 rounded-lg transition reject-btn"
                                                data-trainer-id="@trainer.Id" 
                                                data-trainer-name="@trainer.Handle"
                                                title="Reject Trainer">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <!-- Verified Trainer - Suspend option -->
                                        <button type="button" class="px-3 py-2 text-sm font-medium text-orange-600 hover:bg-orange-50 rounded-lg transition suspend-btn"
                                                data-trainer-id="@trainer.Id" 
                                                data-trainer-name="@trainer.Handle"
                                                title="Suspend Trainer">
                                            <i class="fas fa-pause-circle"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center">
                            <div class="flex flex-col items-center justify-center gap-3">
                                <i class="fas fa-inbox text-4xl text-gray-300"></i>
                                <p class="text-gray-500 font-medium">No trainers found</p>
                                <p class="text-sm text-gray-400">Try adjusting your filters or search criteria</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mt-6">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
            <p class="text-sm text-gray-600">
                Showing page <span class="font-semibold">@Model.PageNumber</span> of 
                <span class="font-semibold">@Model.TotalPages</span>
                (<span class="font-semibold">@Model.TotalCount</span> total trainers)
            </p>
            
            <div class="flex items-center gap-2">
                @if (Model.HasPreviousPage)
                {
                    <button type="button" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium pagination-btn"
                            data-page="@(Model.PageNumber - 1)">
                        <i class="fas fa-chevron-left mr-2"></i>Previous
                    </button>
                }

                <div class="flex items-center gap-1">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        @if (i == Model.PageNumber)
                        {
                            <span class="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium">@i</span>
                        }
                        else if (i <= 3 || i > Model.TotalPages - 2 || (i > Model.PageNumber - 2 && i < Model.PageNumber + 2))
                        {
                            <button type="button" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium pagination-btn"
                                    data-page="@i">@i</button>
                        }
                        else if (i == 4 || i == Model.TotalPages - 3)
                        {
                            <span class="px-2">...</span>
                        }
                    }
                </div>

                @if (Model.HasNextPage)
                {
                    <button type="button" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium pagination-btn"
                            data-page="@(Model.PageNumber + 1)">
                        Next<i class="fas fa-chevron-right ml-2"></i>
                    </button>
                }
            </div>
        </div>
    </div>
}
