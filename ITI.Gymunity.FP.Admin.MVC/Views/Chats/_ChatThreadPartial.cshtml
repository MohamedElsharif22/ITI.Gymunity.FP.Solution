@using ITI.Gymunity.FP.Admin.MVC.ViewModels.Chat
@model ChatThreadViewModel

<div class="d-flex flex-column h-100">
    <!-- Chat Header -->
    <div class="card-header border-bottom">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">
                    <img src="@(Model.ClientProfilePhoto ?? "/images/default-avatar.png")" 
                         class="rounded-circle me-2" width="40" height="40" alt="">
                    @(Model.ClientName ?? Model.TrainerName ?? "Chat")
                </h5>
            </div>
            <div>
                @if (Model.IsPriority)
                {
                    <span class="badge bg-warning"><i class="fas fa-star"></i> Priority</span>
                }
            </div>
        </div>
    </div>

    <!-- Messages Area -->
    <div class="flex-grow-1 overflow-auto p-4" id="messagesList" style="max-height: 400px;">
        @if (Model.Messages.Any())
        {
            @foreach (var message in Model.Messages.OrderBy(m => m.CreatedAt))
            {
                <div class="message-item mb-3 @(message.SenderId == ViewContext.HttpContext.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ? "own" : "")" 
                     data-message-id="@message.Id">
                    <div class="d-flex gap-3 @(message.SenderId == ViewContext.HttpContext.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ? "flex-row-reverse" : "")">
                        <img src="@(message.SenderProfilePhoto ?? "/images/default-avatar.png")" 
                             class="rounded-circle" width="40" height="40" alt="@message.SenderName">
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between">
                                <strong>@message.SenderName</strong>
                                <small class="text-muted">@message.CreatedAt.ToString("g")</small>
                            </div>
                            <p class="mb-0 mt-2">@message.Content</p>
                            @if (!message.IsRead && message.SenderId != ViewContext.HttpContext.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                            {
                                <small class="text-danger">Unread</small>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <p>No messages yet. Start the conversation!</p>
            </div>
        }
    </div>

    <!-- Message Input Area -->
    <div class="card-footer border-top">
        <div class="input-group">
            <input type="text" class="form-control" id="messageInput" placeholder="Type your message..." />
            <button class="btn btn-primary" type="button" onclick="sendMessage()">
                <i class="fas fa-paper-plane"></i> Send
            </button>
        </div>
    </div>
</div>

<style>
    .message-item {
        padding: 0.75rem 1rem;
        background-color: #f8f9fa;
        border-radius: 8px;
        word-break: break-word;
    }

    .message-item.own {
        background-color: #e7f3ff;
        margin-left: auto;
        max-width: 70%;
    }

    .message-item.own p {
        color: #0d6efd;
    }

    #messageInput {
        border-radius: 20px;
    }

    #messagesList {
        display: flex;
        flex-direction: column;
    }
</style>
