@model string

@if (!string.IsNullOrEmpty(ViewData["SuccessMessage"]?.ToString()))
{
    <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg text-green-700 flex items-start gap-3 animate-fadeIn">
        <i class="fas fa-check-circle flex-shrink-0 mt-0.5"></i>
        <div class="flex-grow">
            <strong>Success!</strong> @ViewData["SuccessMessage"]
        </div>
        <button type="button" class="text-green-400 hover:text-green-600 ml-2" onclick="this.parentElement.remove()">
            <i class="fas fa-times"></i>
        </button>
    </div>
}

