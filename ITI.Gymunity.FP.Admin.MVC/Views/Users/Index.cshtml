@model ITI.Gymunity.FP.Admin.MVC.ViewModels.Users.UsersListViewModel

@{
    ViewData["Title"] = "Manage Users";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-2">
                <i class="fas fa-users text-blue-600"></i>
                <span>Manage Users</span>
            </h1>
            <p class="text-gray-500 mt-1">Manage user accounts, roles, and permissions</p>
        </div>
        <div class="flex gap-3">
            <a href="@Url.Action("Statistics")" class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-lg hover:shadow-lg transition transform hover:scale-105">
                <i class="fas fa-chart-bar"></i>
                <span>Statistics</span>
            </a>
            <a href="@Url.Action("Export")" class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-emerald-500 to-emerald-600 text-white rounded-lg hover:shadow-lg transition transform hover:scale-105">
                <i class="fas fa-download"></i>
                <span>Export</span>
            </a>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center gap-2">
                <i class="fas fa-search"></i>
                <span>Search & Filter</span>
            </h3>
        </div>
        <div class="p-6 space-y-4">
            <form method="get" action="@Url.Action("Search")" class="flex flex-col sm:flex-row gap-3">
                <div class="flex-1">
                    <input type="text" 
                           name="searchTerm" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" 
                           placeholder="Search by email, username, or name..."
                           value="@Model.SearchTerm" />
                </div>
                <button type="submit" class="inline-flex items-center gap-2 px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                    <i class="fas fa-search"></i>
                    <span>Search</span>
                </button>
            </form>

            <!-- Role Filter Badges -->
            <div class="flex flex-wrap gap-2 pt-2">
                <a href="@Url.Action("ByRole", new { role = "Client" })" class="inline-flex items-center gap-2 px-3 py-1 bg-blue-100 text-blue-700 rounded-full hover:bg-blue-200 transition text-sm font-medium">
                    <i class="fas fa-user"></i> Clients
                </a>
                <a href="@Url.Action("ByRole", new { role = "Trainer" })" class="inline-flex items-center gap-2 px-3 py-1 bg-amber-100 text-amber-700 rounded-full hover:bg-amber-200 transition text-sm font-medium">
                    <i class="fas fa-dumbbell"></i> Trainers
                </a>
                <a href="@Url.Action("ByRole", new { role = "Admin" })" class="inline-flex items-center gap-2 px-3 py-1 bg-red-100 text-red-700 rounded-full hover:bg-red-200 transition text-sm font-medium">
                    <i class="fas fa-shield-alt"></i> Admins
                </a>
                <a href="@Url.Action("Index")" class="inline-flex items-center gap-2 px-3 py-1 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition text-sm font-medium">
                    <i class="fas fa-list"></i> All Users
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    @if (Model.TotalCount > 0)
    {
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Total Users</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">@Model.TotalCount</p>
                    </div>
                    <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center">
                        <i class="fas fa-users text-blue-600 text-lg"></i>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Current Page</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">@Model.PageNumber / @Model.TotalPages</p>
                        <p class="text-gray-500 text-sm mt-1">@Model.Users.Count() users</p>
                    </div>
                    <div class="w-12 h-12 rounded-lg bg-amber-100 flex items-center justify-center">
                        <i class="fas fa-book text-amber-600 text-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Users Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="bg-gradient-to-r from-gray-900 to-gray-800 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center gap-2">
                <i class="fas fa-table"></i>
                <span>Users List</span>
            </h3>
        </div>
        <div class="overflow-x-auto">
            @if (Model.Users.Any())
            {
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr class="text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            <th class="px-6 py-3"><input type="checkbox" id="selectAll" class="w-4 h-4 rounded border-gray-300 cursor-pointer" /></th>
                            <th class="px-6 py-3">Name</th>
                            <th class="px-6 py-3">Email</th>
                            <th class="px-6 py-3">Username</th>
                            <th class="px-6 py-3">Role</th>
                            <th class="px-6 py-3">Status</th>
                            <th class="px-6 py-3">Email Verified</th>
                            <th class="px-6 py-3">Created</th>
                            <th class="px-6 py-3">Last Login</th>
                            <th class="px-6 py-3 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var user in Model.Users)
                        {
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4">
                                    <input type="checkbox" class="user-checkbox w-4 h-4 rounded border-gray-300 cursor-pointer" value="@user.Id" />
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center text-white text-sm font-medium flex-shrink-0">
                                            @user.FullName.Substring(0, 2).ToUpper()
                                        </div>
                                        <div>
                                            <p class="font-medium text-gray-900">@user.FullName</p>
                                            @if (user.IsVerified)
                                            {
                                                <span class="inline-block mt-1 px-2 py-1 bg-green-100 text-green-700 rounded text-xs font-medium">
                                                    <i class="fas fa-check-circle"></i> Verified
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600">@user.Email</td>
                                <td class="px-6 py-4 text-sm"><code class="bg-gray-100 px-2 py-1 rounded text-gray-700">@user.UserName</code></td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-sm font-medium @GetRoleBadgeClass(user.Role)">
                                        @GetRoleIcon(user.Role)
                                        @user.Role
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    @if (user.IsLockedOut)
                                    {
                                        <span class="inline-flex items-center gap-1 px-3 py-1 bg-red-100 text-red-700 rounded-full text-sm font-medium">
                                            <i class="fas fa-lock"></i> Locked
                                        </span>
                                    }
                                    else if (user.Status == "Suspended")
                                    {
                                        <span class="inline-flex items-center gap-1 px-3 py-1 bg-amber-100 text-amber-700 rounded-full text-sm font-medium">
                                            <i class="fas fa-ban"></i> Suspended
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">
                                            <i class="fas fa-check"></i> Active
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    @if (user.EmailConfirmed)
                                    {
                                        <span class="inline-flex items-center gap-1 px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">
                                            <i class="fas fa-check"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 px-3 py-1 bg-amber-100 text-amber-700 rounded-full text-sm font-medium">
                                            <i class="fas fa-exclamation"></i>
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600">@user.CreatedAt.ToShortDateString()</td>
                                <td class="px-6 py-4 text-sm text-gray-600">
                                    @if (user.LastLoginAt.HasValue)
                                    {
                                        @user.LastLoginAt.Value.ToShortDateString()
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">Never</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <a href="@Url.Action("Details", new { userId = user.Id })" 
                                           class="p-2 rounded-lg hover:bg-blue-100 text-blue-600 transition" 
                                           title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { userId = user.Id })" 
                                           class="p-2 rounded-lg hover:bg-amber-100 text-amber-600 transition" 
                                           title="Edit User">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="p-2 rounded-lg hover:bg-red-100 text-red-600 transition" 
                                                onclick="deleteUser('@user.Id', '@user.FullName')" 
                                                title="Delete User">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Bulk Actions -->
                <div class="border-t border-gray-200 px-6 py-4 bg-gray-50">
                    <div class="flex flex-col sm:flex-row gap-3 items-center">
                        <label class="text-sm font-medium text-gray-700">Bulk Actions:</label>
                        <select id="bulkAction" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">-- Select Action --</option>
                            <option value="change-role">Change Role</option>
                        </select>
                        <select id="newRole" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent hidden">
                            <option value="">-- Select Role --</option>
                            <option value="Client">Client</option>
                            <option value="Trainer">Trainer</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <button class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" onclick="performBulkAction()">
                            <i class="fas fa-cogs"></i>
                            <span>Apply</span>
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="px-6 py-12 text-center">
                    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-100 mb-4">
                        <i class="fas fa-info-circle text-blue-600 text-2xl"></i>
                    </div>
                    <p class="text-gray-600 text-lg">No users found matching your criteria.</p>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="flex justify-center">
            <nav class="inline-flex rounded-lg border border-gray-300 shadow-sm">
                @if (Model.PageNumber > 1)
                {
                    <a href="@Url.Action("Index", new { pageNumber = 1, pageSize = Model.PageSize })" class="px-4 py-2 text-gray-700 hover:bg-gray-50 transition border-r border-gray-300">
                        <i class="fas fa-chevron-double-left"></i>
                    </a>
                    <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize })" class="px-4 py-2 text-gray-700 hover:bg-gray-50 transition border-r border-gray-300">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                }

                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                {
                    <a href="@Url.Action("Index", new { pageNumber = i, pageSize = Model.PageSize })" 
                       class="px-4 py-2 @(i == Model.PageNumber ? "bg-blue-600 text-white" : "text-gray-700 hover:bg-gray-50") transition border-r border-gray-300">
                        @i
                    </a>
                }

                @if (Model.PageNumber < Model.TotalPages)
                {
                    <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize })" class="px-4 py-2 text-gray-700 hover:bg-gray-50 transition border-r border-gray-300">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                    <a href="@Url.Action("Index", new { pageNumber = Model.TotalPages, pageSize = Model.PageSize })" class="px-4 py-2 text-gray-700 hover:bg-gray-50 transition">
                        <i class="fas fa-chevron-double-right"></i>
                    </a>
                }
            </nav>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('selectAll')?.addEventListener('change', function() {
            document.querySelectorAll('.user-checkbox').forEach(cb => cb.checked = this.checked);
        });

        document.getElementById('bulkAction').addEventListener('change', function() {
            document.getElementById('newRole').classList.toggle('hidden', this.value !== 'change-role');
        });

        function performBulkAction() {
            var action = document.getElementById('bulkAction').value;
            var selectedIds = Array.from(document.querySelectorAll('.user-checkbox:checked')).map(cb => cb.value);

            if (!selectedIds.length) {
                alert('Please select at least one user');
                return;
            }

            if (!action) {
                alert('Please select an action');
                return;
            }

            if (action === 'change-role') {
                var newRole = document.getElementById('newRole').value;
                if (!newRole) {
                    alert('Please select a role');
                    return;
                }

                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("BulkAction")';

                var actionInput = document.createElement('input');
                actionInput.type = 'hidden';
                actionInput.name = 'action';
                actionInput.value = action;
                form.appendChild(actionInput);

                var roleInput = document.createElement('input');
                roleInput.type = 'hidden';
                roleInput.name = 'newRole';
                roleInput.value = newRole;
                form.appendChild(roleInput);

                selectedIds.forEach(id => {
                    var input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'userIds';
                    input.value = id;
                    form.appendChild(input);
                });

                document.body.appendChild(form);
                form.submit();
            }
        }

        function deleteUser(userId, userName) {
            if (confirm(`Are you sure you want to delete user "${userName}"? This action cannot be undone.`)) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Delete", new { userId = "__ID__" })'.replace('__ID__', userId);
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}

@functions {
    private string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "bg-red-100 text-red-700",
            "Trainer" => "bg-amber-100 text-amber-700",
            "Client" => "bg-blue-100 text-blue-700",
            _ => "bg-gray-100 text-gray-700"
        };
    }

    private string GetRoleIcon(string role)
    {
        return role switch
        {
            "Admin" => "<i class=\"fas fa-shield-alt\"></i>",
            "Trainer" => "<i class=\"fas fa-dumbbell\"></i>",
            "Client" => "<i class=\"fas fa-user-circle\"></i>",
            _ => "<i class=\"fas fa-user\"></i>"
        };
    }
}
